<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:maxLines="1"
                android:padding="8dp"/>

            <Button
                android:id="@+id/btnSendMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:padding="8dp"
                android:background="#000000"
                android:text="Send Message"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgTonyStark"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/tony_stark"
            android:layout_margin="20dp"/>
        <TextView
            android:id="@+id/txtNameTony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tony Stark"
            android:textSize="18sp"
            android:layout_toRightOf="@id/imgTonyStark"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/txtOtherNameTony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heroic Name: Iron man"
            android:layout_toRightOf="@id/imgTonyStark"
            android:layout_below="@id/txtNameTony"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/txtRealNameTony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Real Name: Robert Drowny"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/imgTonyStark"
            android:layout_below="@id/txtOtherNameTony"
            android:layout_marginTop="15dp"
            android:textStyle="italic"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgSteve"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/captain_america"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtNameSteve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steve Rodgers"
                android:textSize="18sp"
                android:layout_toRightOf="@id/imgSteve"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/txtOtherNameSteve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heroic Name: Captain America"
                android:layout_toRightOf="@id/imgSteve"
                android:layout_below="@id/txtNameSteve"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/txtRealNameSteve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Real Name: Chris Evans"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_toRightOf="@id/imgSteve"
                android:layout_below="@id/txtOtherNameSteve"
                android:layout_marginTop="10dp"
                android:textStyle="italic"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgBruce"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/hulk"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtNameBruce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bruce Banner"
                android:textSize="18sp"
                android:layout_toRightOf="@id/imgBruce"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/txtOtherNameBruce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heroic Name: Hulk"
                android:layout_toRightOf="@id/imgBruce"
                android:layout_below="@id/txtNameBruce"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/txtRealNameBruce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Real Name: Mark Ruffalo"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_toRightOf="@id/imgBruce"
                android:layout_below="@id/txtOtherNameBruce"
                android:layout_marginTop="15dp"
                android:textStyle="italic"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgThor"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/thor"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtNameThor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thor"
                android:textSize="18sp"
                android:layout_toRightOf="@id/imgThor"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/txtOtherNameThor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heroic Name: Thor"
                android:layout_toRightOf="@id/imgThor"
                android:layout_below="@id/txtNameThor"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/txtRealNameThor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Real Name: Chris Hemsworth"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_toRightOf="@id/imgThor"
                android:layout_below="@id/txtOtherNameThor"
                android:layout_marginTop="15dp"
                android:textStyle="italic"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgBlackPanther"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/black_panther"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtNameBlackPanther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T'Challa"
                android:textSize="18sp"
                android:layout_toRightOf="@id/imgBlackPanther"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/txtOtherNameBlackPanther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heroic Name: Black Panther"
                android:layout_toRightOf="@id/imgBlackPanther"
                android:layout_below="@id/txtNameBlackPanther"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/txtRealNameBlackPanther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Real Name: C.Boseman"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_toRightOf="@id/imgBlackPanther"
                android:layout_below="@id/txtOtherNameBlackPanther"
                android:layout_marginTop="15dp"
                android:textStyle="italic"/>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgNatasha"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/widow"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtNameNatasha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Natasha Romanoff"
                android:textSize="18sp"
                android:layout_toRightOf="@id/imgNatasha"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/txtOtherNameNatasha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heroic Name: Black Widow"
                android:layout_toRightOf="@id/imgNatasha"
                android:layout_below="@id/txtNameNatasha"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/txtRealNameNatasha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Real Name: Scarlet Johansson"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_toRightOf="@id/imgNatasha"
                android:layout_below="@id/txtOtherNameNatasha"
                android:layout_marginTop="15dp"
                android:textStyle="italic"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_out"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#000000"
            android:layout_marginTop="20dp"/>


    </LinearLayout>

</ScrollView>