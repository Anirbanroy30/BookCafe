<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgTonyStark"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/tony_stark"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/txtNameTony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tony Stark"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/txtOtherNameTony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heroic Name: Iron man"
        android:layout_toRightOf="@id/imgTonyStark"
        android:layout_below="@id/txtNameTony"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/txtRealNameTony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Real Name: Robert Drowny"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/imgTonyStark"
        android:layout_below="@id/txtOtherNameTony"
        android:layout_marginTop="15dp"
        android:textStyle="italic"/>
    <Button
        android:id="@+id/btnMoreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#156500"
        android:layout_below="@id/imgTonyStark"
        android:layout_margin="20dp"
        android:text="MORE INFORMATION"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXIT THE APP"
        android:textColor="#ffffff"
        android:background="#800000"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>